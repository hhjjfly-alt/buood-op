# Target Architecture
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_Generic=y

# Partition Sizes
CONFIG_TARGET_KERNEL_PARTSIZE=64
CONFIG_TARGET_ROOTFS_PARTSIZE=920

# Enable Feeds
CONFIG_FEED_kenzo=y
CONFIG_FEED_luci=y
CONFIG_FEED_packages=y
CONFIG_FEED_routing=y
CONFIG_FEED_telephony=y

# LuCI Core
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-lib-ip=y
CONFIG_PACKAGE_luci-lib-nixio=y
CONFIG_PACKAGE_luci-lib-jsonc=y
CONFIG_PACKAGE_luci-lib-fs=y

# Core Features
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-i18n-passwall-zh-cn=y
CONFIG_PACKAGE_luci-app-adguardhome=y
CONFIG_PACKAGE_luci-i18n-adguardhome-zh-cn=y
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_luci-i18n-smartdns-zh-cn=y
CONFIG_PACKAGE_luci-app-dockerman=y
CONFIG_PACKAGE_luci-i18n-dockerman-zh-cn=y
CONFIG_PACKAGE_luci-app-vlmcsd=y
CONFIG_PACKAGE_luci-i18n-vlmcsd-zh-cn=y
CONFIG_PACKAGE_luci-app-lucky=y
CONFIG_PACKAGE_luci-i18n-lucky-zh-cn=y
CONFIG_PACKAGE_tailscale=y
CONFIG_PACKAGE_zerotier=y
CONFIG_PACKAGE_luci-app-qbittorrent=y
CONFIG_PACKAGE_luci-i18n-qbittorrent-zh-cn=y

# Dependencies for PASSWALL
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_kmod-ipt-ipset=y
CONFIG_PACKAGE_kmod-ipt-nat=y

# Docker Dependencies
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_docker-compose=y
CONFIG_PACKAGE_kmod-br-netfilter=y
CONFIG_PACKAGE_kmod-ikconfig=y
CONFIG_PACKAGE_kmod-nf-ipvs=y
CONFIG_PACKAGE_kmod-veth=y
CONFIG_PACKAGE_iptables-mod-extra=y
CONFIG_PACKAGE_cgroupfs-mount=y
CONFIG_PACKAGE_libseccomp=y

# qBittorrent Dependencies
CONFIG_PACKAGE_qbittorrent=y
CONFIG_PACKAGE_libtorrent-rasterbar=y
CONFIG_PACKAGE_boost=y
CONFIG_PACKAGE_boost-libs=y
CONFIG_PACKAGE_openssl=y

# Tailscale and ZeroTier Dependencies
CONFIG_PACKAGE_kmod-wireguard=y
CONFIG_PACKAGE_kmod-nf-nat=y
CONFIG_PACKAGE_kmod-nf-conntrack6=y

# Additional Dependencies
CONFIG_PACKAGE_libev=y
CONFIG_PACKAGE_lm-sensors=y
CONFIG_PACKAGE_luci-app-samba4=y
CONFIG_PACKAGE_wsdd2=y
CONFIG_PACKAGE_libpam=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_liblzma=y
CONFIG_PACKAGE_libnetsnmp=y
CONFIG_PACKAGE_glib2=y
CONFIG_PACKAGE_libgpiod=y

# Ksmbd Addons
CONFIG_PACKAGE_ksmbd-tools=y
CONFIG_PACKAGE_luci-app-ksmbd=y
CONFIG_PACKAGE_luci-i18n-ksmbd-zh-cn=y

# Disk Management
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_PACKAGE_luci-i18n-diskman-zh-cn=y

